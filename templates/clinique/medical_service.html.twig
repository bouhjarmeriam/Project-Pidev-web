        </div>

        <!-- MRI Scans -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="img-container">
                    <img src="https://images.pexels.com/photos/7088489/pexels-photo-7088489.jpeg" class="img-fluid" alt="{{ 'medical_services.mri_scans.alt'|trans }}">
                </div>
                <div class="card-body text-center">
                    <h5 class="card-title">{{ 'medical_services.mri_scans.title'|trans }}</h5>
