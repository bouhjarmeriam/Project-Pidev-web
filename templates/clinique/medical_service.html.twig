 {% extends 'base.html.twig' %}

{% block title %}{{ 'medical_services.title'|trans }}{% endblock %}

{% block body %}
<style>
/* General Styling */
body {
    background: linear-gradient(to right, #004aad, #e63946, #ffffff);
    color: #ffffff;
    font-family: 'Poppins', sans-serif;
}

/* Header Styling */
.header-container {
    text-align: center;
    margin-bottom: 30px;
}

.logo {
    width: 120px;
    height: auto;
}

/* Language Switcher */
.language-switcher {
    margin-top: 10px;
}

.language-switcher a {
    text-decoration: none;
    font-weight: bold;
    color: #ffffff;
    margin: 0 10px;
    transition: color 0.3s;
}

.language-switcher a:hover {
    color: #ffdd57;
}

/* Card Styling */
.card {
    transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    border: none;
    border-radius: 12px;
    overflow: hidden;
    background: #ffffff;
    color: #333;
}

.card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
}

/* Image Container */
.img-container {
    height: 220px;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #f8f9fa;
    border-bottom: 3px solid #e63946;
}

.img-container img {
    max-width: 100%;
    max-height: 100%;
    object-fit: cover;
}

/* Title Styling */
.card-title {
    font-weight: bold;
    color: #004aad;
}

/* Description Styling */
.card-text {
    font-size: 14px;
    color: #555;
}

/* Layout Adjustments */
.container {
    max-width: 1200px;
}
</style>

<div class="container mt-5">
    <!-- Team Logo & Header -->
    <div class="header-container">
        <img src="{{ asset('imagesS/logo.png') }}" class="logo" alt="{{ 'medical_services.team_logo'|trans }}">
        <h1 class="text-center mt-3">{{ 'medical_services.heading'|trans }}</h1>

        <!-- Language Switcher -->
        <div class="language-switcher text-center">
