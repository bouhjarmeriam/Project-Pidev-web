<a href="{{ path('medical_services_fr') }}">ðŸ‡«ðŸ‡· FranÃ§ais</a>


        </div>
    </div>

    <!-- Display current locale -->
    <p class="text-center mt-2">Current Locale: {{ app.request.locale }}</p>

    <div class="row">
        <!-- Radiology Service -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="img-container">
                    <img src="https://images.pexels.com/photos/7088488/pexels-photo-7088488.jpeg" class="img-fluid" alt="{{ 'medical_services.radiology.alt'|trans }}">
                </div>
                <div class="card-body text-center">
                    <h5 class="card-title">{{ 'medical_services.radiology.title'|trans }}</h5>
                    <p class="card-text">{{ 'medical_services.radiology.description'|trans }}</p>
                </div>
            </div>
        </div>

        <!-- DNA Testing -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="img-container">
                    <img src="https://images.pexels.com/photos/7088485/pexels-photo-7088485.jpeg" class="img-fluid" alt="{{ 'medical_services.dna_testing.alt'|trans }}">
                </div>
                <div class="card-body text-center">
                    <h5 class="card-title">{{ 'medical_services.dna_testing.title'|trans }}</h5>
